# =============================================================================
# OrgMind Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
APP_NAME=OrgMind
APP_ENV=development
DEBUG=true
LOG_LEVEL=debug
VERSION=0.1.0

# -----------------------------------------------------------------------------
# API SERVER
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_ME_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# -----------------------------------------------------------------------------
# POSTGRES (Source of Truth)
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=orgmind
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# REDIS (Event Bus)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# -----------------------------------------------------------------------------
# NEO4J (Graph Index)
# -----------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=orgmind_dev
NEO4J_DATABASE=neo4j

# -----------------------------------------------------------------------------
# QDRANT (Vector Search)
# -----------------------------------------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# -----------------------------------------------------------------------------
# MEILISEARCH (Full-Text Search)
# -----------------------------------------------------------------------------
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=orgmind_dev_key

# -----------------------------------------------------------------------------
# MINIO (Object Storage)
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=orgmind_admin
MINIO_SECRET_KEY=orgmind_secret
MINIO_SECURE=false
MINIO_BUCKET=orgmind-files

# -----------------------------------------------------------------------------
# TEMPORAL (Workflow Engine)
# -----------------------------------------------------------------------------
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=orgmind-workflows
WORKFLOW_WORKER_COUNT=2
ACTIVITY_WORKER_COUNT=5

# -----------------------------------------------------------------------------
# OPENAI (LLM / Embeddings)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# OBSERVABILITY
# -----------------------------------------------------------------------------
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=orgmind
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# -----------------------------------------------------------------------------
# NOTIFICATIONS
# -----------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@orgmind.io

SLACK_WEBHOOK_URL=

# -----------------------------------------------------------------------------
# AIRBYTE (Event Ingestion - Phase 3+)
# -----------------------------------------------------------------------------
AIRBYTE_API_URL=http://localhost:8006
AIRBYTE_WORKSPACE_ID=

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
FEATURE_AGENT_ENABLED=true
FEATURE_WORKFLOW_ENABLED=true
FEATURE_DECISION_TRACE_ENABLED=true
